{
	"rulesDirectory": [
		"node_modules/codelyzer"
	],
	"rules": {
		"trailing-comma": [
			true,
			{
				"multiline": "always",
				"singleline": "never"
			}
		],
		"arrow-return-shorthand": true,
		"callable-types": true,
		"class-name": true,
		"comment-format": [
			true,
			"check-space"
		],
		"eofline": true,
		"import-blacklist": [
			true,
			"rxjs", "lodash"
		],
		"import-spacing": true,
		"indent": [
			true,
			"tabs"
		],
		"max-line-length": [
			true,
			140
		],
		"member-access": true,
		"no-arg": true,
		"no-construct": true,
		"no-duplicate-super": true,
		"no-empty": false,
		"no-empty-interface": true,
		"no-eval": true,
		"no-misused-new": true,
		"no-shadowed-variable": true,
		"no-string-throw": true,
		"no-trailing-whitespace": true,
		"no-unsafe-finally": true,
		"no-unused-variable": {
			"severity": "warning"
		},
		"no-var-keyword": true,
		"one-line": [
			true,
			"check-open-brace",
			"check-whitespace"
		],
		"prefer-const": false,
		"quotemark": [
			true,
			"single"
		],
		"semicolon": [
			true,
			"always"
		],
		"triple-equals": [
			false,
			"allow-null-check"
		],
		"typedef-whitespace": [
			true,
			{
				"call-signature": "nospace",
				"index-signature": "nospace",
				"parameter": "nospace",
				"property-declaration": "nospace",
				"variable-declaration": "nospace"
			}
		],
		"unified-signatures": true,
		"variable-name": [
			true,
			"ban-keywords"
		],
		"whitespace": [
			true,
			"check-branch",
			"check-decl",
			"check-operator",
			"check-separator",
			"check-type"
		],

		"directive-selector": [
			true,
			"attribute",
			"evck",
			"camelCase"
		],
		"component-selector": [
			true,
			"element",
			"ggm",
			"kebab-case"
		],
		"ban": [
			true,
			"eval",
			"fit",
			"fdescribe",
			{
				"name": "$",
				"message": "please don't"
			}
		],
		"use-input-property-decorator": true,
		"use-output-property-decorator": true,
		"use-life-cycle-interface": true,
		"use-pipe-transform-interface": true,
		"component-class-suffix": true,
		"directive-class-suffix": true
	}
}
